{
  "name": "@mordech/tokens",
  "author": "Elad Mizrahi",
  "version": "0.18.0",
  "prepare": "yarn run build",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mordech/mordech-projects.git"
  },
  "files": [
    "dist/**/*"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/css/index.css"
  },
  "scripts": {
    "build:ts": "tsc -b",
    "build:assets": "ts-node scripts/index.ts && prettier --write src/**/*.css",
    "build:css": "esbuild --bundle --minify --outfile=dist/css/index.css src/lib/styles/index.css --loader:.woff2=file",
    "build": "yarn run-s build:*",
    "watch:lib": "yarn build && nodemon --watch src/lib -i src/lib/styles/tokens.css --ext ts,css --exec \"nx run @mordech/tokens:build\" &",
    "test": "echo 'implement test'",
    "postinstall": "yarn build:assets",
    "lint": "eslint src",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "add": "^2.0.6",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "yarn": "^1.22.19"
  },
  "nx": {}
}
