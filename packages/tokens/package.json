{
  "name": "@mordech/tokens",
  "author": "Elad Mordechai Mizrahi",
  "version": "0.31.1",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mordech/mordech-projects.git",
    "directory": "packages/tokens"
  },
  "homepage": "https://github.com/Mordech/mordech-projects/tree/main/packages/tokens#readme",
  "files": [
    "dist/**/*"
  ],
  "license": "MIT",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "declarations": [
        "./dist/lib/declarations/index.d.ts"
      ],
      "utils": [
        "./dist/lib/utils/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./declarations": {
      "require": "./dist/declarations/index.js",
      "import": "./dist/declarations/index.mjs",
      "types": "./dist/lib/declarations/index.d.ts"
    },
    "./utils": {
      "require": "./dist/utils/index.js",
      "import": "./dist/utils/index.mjs",
      "types": "./dist/lib/utils/index.d.ts"
    },
    "./css": "./dist/css/index.css",
    "./css/*": "./dist/css/*"
  },
  "scripts": {
    "build:assets": "ts-node --esm scripts/index.ts",
    "build:css": "ts-node --esm scripts/bundleCss.ts",
    "build:ts": "ts-node --esm scripts/build.ts",
    "build:types": "tsc",
    "build": "pnpm run-s build:*",
    "watch:lib": "pnpm build && nodemon --watch src/lib -i src/lib/styles/tokens.css --ext ts,css --exec \"nx run @mordech/tokens:build\" &",
    "test": "vitest --coverage --run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:css": "stylelint 'src/**/*.{ts,css}'",
    "prepare": "pnpm build"
  },
  "devDependencies": {
    "add": "^2.0.6",
    "eslint": "^8.29.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {}
}
