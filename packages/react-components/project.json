{
  "name": "@mordech/react-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react-components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/react-components/src/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "lint:css": {
      "command": "stylelint 'packages/react-components/**/*.{ts,tsx,css}'"
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/react-components"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/react-components"
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "configDir": "packages/react-components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputDir": "packages/react-components/storybook-static",
        "configDir": "packages/react-components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
