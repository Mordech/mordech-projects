{
  "name": "@mordech/react-components",
  "version": "0.29.0",
  "private": true,
  "dependencies": {
    "@mordech/tokens": "^0.29.0",
    "@mordech/web-components": "^0.29.0"
  },
  "devDependencies": {
    "@mordech/storybook-toggle-theme-addon": "workspace:*"
  },
  "scripts": {
    "visual": "loki test --reactUri file:./storybook-static",
    "visual:approve": "loki approve",
    "visual:ci": "loki test --requireReference --reactUri file:./storybook-static"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  }
}
