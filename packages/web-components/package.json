{
  "name": "@mordech/web-components",
  "version": "0.26.1",
  "type": "module",
  "main": "dist/index.cjs",
  "license": "MIT",
  "author": "Elad Mordechai Mizrahi",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mordech/mordech-projects.git",
    "directory": "packages/web-components"
  },
  "exports": {
    "./*": {
      "default": "./dist/components/*.js",
      "types": "./dist/components/*/index.d.ts"
    },
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:watch": "nodemon --watch src --ext ts,css --exec pnpm build",
    "test": "vitest --coverage --run",
    "prepare": "pnpm build"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@mordech/tokens": "^0.26.1"
  },
  "devDependencies": {
    "postcss-lit": "^1.0.1"
  }
}
