{
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "develop",
          "build",
          "build:assets",
          "serve",
          "start",
          "test:watch",
          "clean",
          "generate:component",
          "typecheck",
          "storybook",
          "test",
          "lint",
          "lint:css",
          "visual",
          "visual:ci"
        ],
        "accessToken": "ZWJiZTdjOGEtZmFkYS00YjNhLWIwNTYtOTdkOGRjNTRhMTg4fHJlYWQtd3JpdGU="
      }
    }
  },
  "generators": {
    "@nrwl/react:component": {
      "style": "styled-components",
      "export": true,
      "pascalCaseDirectory": true,
      "pascalCaseFiles": true
    },
    "@nrwl/react": {
      "application": {
        "style": "styled-components",
        "linter": "eslint",
        "babel": true,
        "skipDefaultProject": true,
        "unitTestRunner": "none"
      },
      "component": {
        "style": "styled-components"
      },
      "library": {
        "style": "styled-components",
        "linter": "eslint"
      }
    }
  },
  "targetDefaults": {
    "start": {
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build:lib",
          "params": "forward"
        }
      ]
    },
    "build": {
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build",
          "params": "forward"
        }
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/build",
        "{projectRoot}/public/build",
        "{projectRoot}/storybook-static"
      ]
    },
    "visual": {
      "dependsOn": [
        "build"
      ]
    },
    "visual:ci": {
      "dependsOn": [
        "build"
      ]
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "defaultProject": "@mordech/portfolio"
}