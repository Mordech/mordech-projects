{
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "develop",
          "build",
          "build-storybook",
          "build:assets",
          "build:css",
          "serve",
          "start",
          "test:watch",
          "watch:lib",
          "clean",
          "generate:component",
          "typecheck",
          "storybook",
          "test",
          "lint",
          "lint:css",
          "visual",
          "visual:ci"
        ],
        "accessToken": "ZWJiZTdjOGEtZmFkYS00YjNhLWIwNTYtOTdkOGRjNTRhMTg4fHJlYWQtd3JpdGU="
      }
    }
  },
  "extends": "nx/presets/npm.json",
  "generators": {
    "@nrwl/react:component": {
      "style": "styled-components",
      "export": true,
      "pascalCaseDirectory": true,
      "pascalCaseFiles": true
    },
    "@nrwl/react": {
      "application": {
        "style": "styled-components",
        "linter": "eslint",
        "babel": true,
        "skipDefaultProject": true,
        "unitTestRunner": "none"
      },
      "component": {
        "style": "styled-components"
      },
      "library": {
        "style": "styled-components",
        "linter": "eslint",
        "unitTestRunner": "vitest"
      }
    }
  },
  "targetDefaults": {
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "prepare": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/types",
        "{projectRoot}/build",
        "{projectRoot}/public"
      ]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/public", "{projectRoot}/storybook-static"]
    },
    "visual": {
      "dependsOn": ["^build", "build-storybook"]
    },
    "visual:ci": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "defaultProject": "@mordech/portfolio"
}
