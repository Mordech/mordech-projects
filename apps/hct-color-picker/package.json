{
  "name": "@mordech/hct-color-picker",
  "private": true,
  "version": "0.0.0",
  "description": "Figma HCT color picker plugin",
  "main": "dist/code.js",
  "author": "Elad Mordechai Mizrahi",
  "license": "MIT",
  "scripts": {
    "start": "pnpm dev",
    "dev": "vite",
    "build:ui": "vite build",
    "build:plugin": "esbuild --bundle --minify --sourcemap --target=es2019 --format=esm --outfile=dist/code.js plugin-src/code.ts",
    "build": "concurrently \"vite build\" \"pnpm build:plugin\"",
    "watch": "concurrently \"vite build --watch\" \"pnpm build:plugin --watch\"",
    "lint": "eslint --ext .ts,.js .",
    "lint:css": "stylelint './**/*.{css,scss,ts}'"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.58.0",
    "@mordech/tokens": "*",
    "@mordech/web-components": "*",
    "concurrently": "^7.6.0",
    "esbuild": "^0.16.17",
    "prettier": "^2.8.2",
    "typescript": "4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-singlefile": "^0.13.2"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.2.0",
    "lit": "^2.6.1"
  }
}
