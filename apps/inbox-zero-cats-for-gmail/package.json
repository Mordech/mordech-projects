{
  "name": "@mordech/inbox-zero-cats-for-gmail",
  "version": "0.28.0",
  "description": "Adds a random cat to the empty state of Gmail inbox",
  "private": true,
  "main": "./src/manifest.json",
  "author": "Elad Mordechai Mizrahi",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "bundle": "ts-node --esm ./scripts/bundle.ts",
    "build": "pnpm bundle && pnpm ts-node --esm ./scripts/build.ts",
    "start": "pnpm bundle --watch",
    "lint": "eslint src",
    "lint:css": "stylelint 'src/**/*.{ts,tsx,css}'",
    "lint:extension": "web-ext lint -s dist/"
  },
  "devDependencies": {
    "@mordech/tokens": "workspace:*",
    "@mordech/web-components": "workspace:*",
    "web-ext": "^7.4.0",
    "webextension-polyfill": "^0.10.0"
  }
}
