{
  "name": "web-components-storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "tags": [],
  "targets": {
    "visual": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "loki test --reactUri file:./storybook-static"
          }
        ],
        "cwd": "apps/web-components-storybook/",
        "parallel": false
      }
    },
    "visual:ci": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "loki test --requireReference --reactUri file:./storybook-static"
          }
        ],
        "cwd": "apps/web-components-storybook/",
        "parallel": false
      }
    },
    "visual:approve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "loki approve"
          }
        ],
        "cwd": "apps/web-components-storybook/",
        "parallel": false
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4600,
        "configDir": "apps/web-components-storybook/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "apps/web-components-storybook/storybook-static",
        "configDir": "apps/web-components-storybook/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
