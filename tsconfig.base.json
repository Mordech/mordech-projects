{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-invalid-css": "off"
        }
      }
    ],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mordech/web-components/*": [
        "packages/web-components/src/lib/components/*"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
